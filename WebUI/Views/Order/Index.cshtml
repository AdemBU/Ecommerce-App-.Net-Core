@model List<Order>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">Sipariş Yönetimi</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sipariş No</th>
                            <th>Tarih</th>
                            <th>Müşteri</th>
                            <th>Tutar</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>#@order.OrderId</td>
                                <td>@order.OrderDate.ToShortDateString()</td>
                                <td>@order.UserName</td>
                                <td>@order.TotalPrice.ToString("C2")</td>
                                <td>
                                    <a asp-controller="Order" asp-action="Update" asp-route-id="@order.OrderId" class="btn btn-warning btn-sm">Güncelle</a>
                                    <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Siparişi silmek istediğinize emin misiniz?')">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
