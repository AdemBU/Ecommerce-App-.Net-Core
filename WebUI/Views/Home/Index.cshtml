@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Ürün Katalogu</h2>
        @if (User.Identity.IsAuthenticated)
        {
            <span class="badge bg-info text-dark">Hoş geldin, @User.Identity.Name</span>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="text-muted small">@item.Description</p>
                        <h5 class="text-success font-weight-bold">@item.Price.ToString("C2")</h5>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <form asp-action="CreateOrder" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />

                            @if (User.Identity.IsAuthenticated)
                            {
                                <button type="submit" class="btn btn-primary w-100 rounded-pill">
                                    Hemen Satın Al
                                </button>
                            }
                            else
                            {
                                <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary w-100 rounded-pill">
                                    Satın Almak İçin Giriş Yap
                                </a>
                            }
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
