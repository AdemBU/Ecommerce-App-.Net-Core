@model List<Product>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Ürün Yönetimi</h2>
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
        </div>

        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Ürün Adı</th>
                    <th>Açıklama</th>
                    <th>Fiyat</th>
                    <th>Stok</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("C2")</td>
                        <td>@item.UnitsInStock</td>
                        <td>
                            <a asp-controller="Product" asp-action="Update" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">Düzenle</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
